@model CMS.Web.Areas.Core.Models.ServicesCategoryModel;
@{
    ViewData["Title"] = "Update Services Category";
}
<div class="services-breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
        </li>
        <li>
            Update Services Category
        </li>
    </ul>
</div>
<div class="services-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <div class="widget radius-bordered">
                        <div class="widget-header">
                            <span class="widget-caption">UPDATE SERVICES CATEGORY</span>
                        </div>
                        <div class="widget-body">
                            <form class="form-horizontal" method="post" action="/admin/services-category/edit">
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(a => a.service_category_id)
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    @Html.LabelFor(a => a.title, new { @class = "col-md-3 control-label" })

                                    <div class="col-md-9">
                                        @Html.TextBoxFor(a => a.title, new { @class = "form-control" })

                                    </div>
                                    <p class="text-danger">@Html.ValidationMessageFor(a => a.title)</p>


                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-palegreen pull-right" type="submit" value="Update" style="background-color:#2dc3e8" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>

</div>
<style>
    .image-preview {
        height: 150px;
        width: 140px;
        float: right;
    }
</style>
@section scripts{
    <script>

        $("#image_name").change(function () {
            readURL(this);
        });
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}
