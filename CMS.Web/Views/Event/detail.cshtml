@model CMS.Core.Entity.Event
@{
    var events = Model;
    ViewData["Title"] = events.title;

}
@{

    var setups = (List<CMS.Core.Entity.Setup>)ViewBag.setup;

    var contactNo = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getPhoneNumberKey).SingleOrDefault()?.value;

    var orgName = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getOrganisationNameKey).SingleOrDefault()?.value;

    var panNo = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getPanNumberKey).SingleOrDefault()?.value;

    var email = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getEmailKey).SingleOrDefault()?.value;

    var address = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getAddressKey).SingleOrDefault()?.value;

    var facebookUrl = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getFacebookKey).SingleOrDefault()?.value;

    var instaUrl = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getInstaKey).SingleOrDefault()?.value;

    var TwitterUrl = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getTwitterKey).SingleOrDefault()?.value;

    var companyDescription = setups.Where(a => a.key == CMS.Web.Models.SetupKeys.getCompanyShortDescriptionKey).SingleOrDefault()?.value;

}

@{
    string getImage(string file_name)
    {
        var extension = System.IO.Path.GetExtension(file_name).ToLower();

        var imageFormats = new[] { ".jpeg", ".png", ".jpg" };

        var docFormats = new[] { ".xls", ".xlsx" };

        var pdfFormats = new[] { ".pdf" };

        var powerPointFormats = new[] { ".ppt", ".pptx" };

        if (imageFormats.Contains(extension))
        {
            return "/images/custom/" + file_name;
        }

        if (docFormats.Contains(extension))
        {
            return "/images/doc.png";
        }

        if (pdfFormats.Contains(extension))
        {
            return "/images/pdf.png";
        }

        return "/images/ppt.png";
    }
}
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5f22836a0984abd4"></script>

<style>
    .inner_banner_section {
        background-image: url(../clientside/images/inner_page_banner.jpg);
    }
</style>


<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h2>Events</h2>
                            <ol class="breadcrumb">
                                <li><a href="/">Home</a></li>
                                <li class="active">Events</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content-info">

    <div class="container paddings-mini">
        <div class="row">

            <div class="col-lg-12">
                <!-- Content Text-->
                <div class="panel-box">
                    <div class="titles">
                        <h4>EVENT</h4>
                    </div>

                    <!-- Post Item -->
                    <div class="post-item">
                        <div class="row">
                            @{
                                var imgSrc = "/images/";
                                if (string.IsNullOrWhiteSpace(events.image_name))
                                {
                                    imgSrc = "/img/Id.png";
                                }
                                else
                                {
                                    imgSrc += "custom/" + events.image_name;
                                }
                            }
                            <div class="col-md-4">
                                <div class="img-hover">
                                    <img src="@imgSrc" alt="image" class="img-responsive" style="width:100%;">

                                </div>
                            </div>
                            <div class="col-md-8">
                                <h3 class="heading3-border text-uppercase">@events.title.ToUpperInvariant()</h3>


                                <p>@events.venue</p>

                                <p class="no-margin-bottom"> @events.description</p>
                            </div>
                        </div>
                    </div>
                    <!-- End Post Item -->

                </div>
                <!-- End Content Text-->
            </div>
        </div>
    </div>

</section>


