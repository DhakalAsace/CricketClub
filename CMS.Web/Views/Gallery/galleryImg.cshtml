@model CMS.Web.ViewModels.GalleryImageViewModel
@{
    ViewData["Title"] = "Gallery";
}

<style>
    .inner_banner_section {
        background-image: url(../clientside/images/inner_page_banner.jpg);
    }
</style>


<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h2>Gallery</h2>
                            <ol class="breadcrumb">
                                <li><a href="/">Home</a></li>
                                <li class="active">Gallery</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Section Area - Content Central -->
<section class="content-info">

    <div class="container paddings-mini">
        <div class="row">

            <div class="col-lg-12">
                <!-- Content Text-->
                <div class="panel-box">
                    <div class="titles">
                        <h4>Recent Pictures</h4>
                    </div>
                    @{ foreach (var gallery in Model.gellery_details)
                        {
                            <!-- Post Item -->
                            <div class="post-item">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="">
                                            <a class="portfolio-img" href="~/images/custom/@gallery.image_name"><img class="img-fluid" src="~/images/custom/@gallery.image_name" alt="" style="height:auto; width:100%; "></a>
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        @if (gallery.title != null)
                                        {
                                            <div class="freight-caption">
                                                <h2 class=""><a>@gallery.title.ToUpperInvariant()</a></h2>
                                            </div>
                                        }
                                        @*<span class="data-info">January 3, 2014  / <i class="fa fa-comments"></i><a href="news-no-sidebar.html#">0</a></span>*@
                                        @{
                                            if (gallery.description != null)
                                            {
                                                <h4><a href="#">@gallery.description.ToUpperInvariant()</a></h4>
                                                }
                                            }
                                            </div>
                                </div>
                            </div>
                            <!-- End Post Item -->
                        }
                    }
                </div>
                <!-- End Content Text-->
            </div>
        </div>
    </div>
</section>


<style>
    .pGallery-wrapper .freight-caption {
        position: absolute;
        width: 100%;
        height: 50px;
        bottom: -50px;
        -webkit-transition: all 300ms cubic-bezier(0.645, 0.045, 0.355, 1);
        transition: all 300ms cubic-bezier(0.645, 0.045, 0.355, 1);
        z-index: 2;
        background: #00FFFF;
    }

    .pGallery-wrapper .freight-caption {
        position: absolute;
        width: 83%;
        height: 50px;
        bottom: -50px;
        -webkit-transition: all 300ms cubic-bezier(0.645, 0.045, 0.355, 1);
        transition: all 300ms cubic-bezier(0.645, 0.045, 0.355, 1);
        z-index: 2;
        background: #00FFFF;
    }

    img.mfp-img {
        width: 800px;
        max-width: 100%;
        height: auto;
        display: block;
        line-height: 0;
        box-sizing: border-box;
        padding: 40px 0 40px;
        margin: 0 auto;
    }
</style>
