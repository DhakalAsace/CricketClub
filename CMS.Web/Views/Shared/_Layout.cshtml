        function sendEnquiry(){
      $.ajax(
      {
        type: "POST",
        url: '@Url.Action("sendEnquiry", "MailSender")',
        data: {
          Name: $("#name").val(),
          Email: $("#email").val(),
          Message: $("#message").val()
        },
        error: function (result) {
          console.log(result);
        },
        success: function (result) {
          alert(result);
          $("#name").val("");
